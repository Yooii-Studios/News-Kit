<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pair_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_800"
    tools:context="com.yooiistudios.newsflow.ui.activity.PairActivity"
    tools:deviceIds="tv">

    <LinearLayout
        android:id="@+id/pair_dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/base_elevation"
        android:padding="@dimen/base_margin_large"
        android:background="@drawable/rounded_rect_drawable"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pair_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/material_black_primary_text"
            android:text="@string/pair_title"/>

        <TextView
            android:id="@+id/pair_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/material_black_primary_text"
            android:text="@string/pair_description"/>

        <TextView
            android:id="@+id/pair_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_half"
            android:layout_marginBottom="@dimen/base_margin_half"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/material_red_400"
            android:text="@string/pair_description2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pair_token1_textview"
                style="@style/PairTokenTextViewStyle"/>

            <TextView
                android:id="@+id/pair_token2_textview"
                style="@style/PairTokenTextViewStyle"/>

            <TextView
                android:id="@+id/pair_token3_textview"
                style="@style/PairTokenTextViewStyle"/>

            <TextView
                android:id="@+id/pair_token4_textview"
                style="@style/PairTokenTextViewStyle"/>

            <TextView
                android:id="@+id/pair_token5_textview"
                style="@style/PairTokenTextViewStyle"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>