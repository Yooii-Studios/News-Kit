<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/store_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/store_item_height_with_description"
    android:background="?android:selectableItemBackground">
    <!--android:background="#c0c"-->

    <!--android:background="#cf0"-->
    <ImageView
        android:id="@+id/store_item_image_view"
        android:layout_width="@dimen/store_icon_banner_size"
        android:layout_height="@dimen/store_icon_banner_size"
        android:layout_marginLeft="@dimen/store_item_base_margin"
        android:layout_marginTop="@dimen/store_item_base_margin"
        android:background="@drawable/store_icon_banner_topic"
        android:contentDescription="@string/content_description"/>

    <ImageView
        android:id="@+id/store_item_price_image_view"
        android:layout_width="@dimen/store_item_price_button_width"
        android:layout_height="@dimen/store_item_price_button_height"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/store_item_base_margin"
        android:layout_marginRight="@dimen/store_item_base_margin"
        android:background="@drawable/store_btn_raised_normal"
        android:contentDescription="@string/content_description"/>

    <TextView
        android:id="@+id/store_item_price_text_view"
        android:layout_width="@dimen/store_item_price_button_width"
        android:layout_height="@dimen/store_item_price_button_height"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/store_item_base_margin"
        android:layout_marginRight="@dimen/store_item_base_margin"
        android:background="?android:selectableItemBackground"
        android:text="@string/store_item_price"
        android:textColor="@android:color/white"
        android:textSize="@dimen/store_item_description_text_size"
        android:gravity="center"/>

    <TextView
        android:id="@+id/store_item_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/store_item_text_margin"
        android:layout_marginRight="@dimen/store_item_base_margin"
        android:layout_marginLeft="@dimen/store_item_base_margin"
        android:layout_toRightOf="@id/store_item_image_view"
        android:layout_toLeftOf="@id/store_item_price_image_view"
        android:background="#0a0"
        android:text="@string/store_item_debug_title"
        android:textSize="@dimen/store_item_title_text_size"
        android:textColor="@android:color/black"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:lines="2"
        android:lineSpacingExtra="@dimen/store_item_text_margin_mid"/>

    <TextView
        android:id="@+id/store_item_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/store_item_base_margin"
        android:layout_marginLeft="@dimen/store_item_base_margin"
        android:layout_marginTop="@dimen/store_item_text_margin_mid"
        android:layout_toRightOf="@id/store_item_image_view"
        android:layout_toLeftOf="@id/store_item_price_image_view"
        android:layout_below="@id/store_item_title_text_view"
        android:background="#fff"
        android:text="@string/store_item_debug_description"
        android:textSize="@dimen/store_item_description_text_size"
        android:textColor="@color/store_item_description_color"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:lines="2"
        android:lineSpacingExtra="@dimen/store_item_text_margin_mid"/>

</RelativeLayout>