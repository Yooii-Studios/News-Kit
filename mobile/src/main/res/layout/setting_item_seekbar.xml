<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/base_margin"
    android:paddingTop="@dimen/base_margin"
    android:paddingRight="@dimen/base_margin">

    <RelativeLayout
        android:id="@+id/setting_item_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setting_item_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/setting_item_status_textview"
            android:layout_marginRight="@dimen/base_margin_small"
            android:text="@string/setting_main_auto_refresh_speed"
            android:textColor="@color/material_black_primary_text"
            android:textSize="@dimen/setting_item_title_text_size"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        <TextView
            android:id="@+id/setting_item_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_news_feed_auto_scroll_very_slow"
            android:textColor="@color/material_black_secondary_text"
            android:textSize="@dimen/setting_item_description_text_size"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    </RelativeLayout>

    <SeekBar
        android:id="@+id/setting_item_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_item_text_layout"
        android:layout_marginTop="@dimen/base_margin_half"/>
</RelativeLayout>