<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Root bound width"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/root_bound_width_cp_1x"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/root_bound_width_cp_1y"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/root_bound_width_cp_2x"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/root_bound_width_cp_2y"
                style="@style/BezierDialogEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Root bound height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/root_bound_height_cp_1x"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/root_bound_height_cp_1y"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/root_bound_height_cp_2x"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/root_bound_height_cp_2y"
                style="@style/BezierDialogEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="image_scale"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/image_scale_cp_1x"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/image_scale_cp_1y"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/image_scale_cp_2x"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/image_scale_cp_2y"
                style="@style/BezierDialogEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Transition"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/transition_cp_1x"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/transition_cp_1y"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/transition_cp_2x"
                style="@style/BezierDialogEditText"/>
            <EditText
                android:id="@+id/transition_cp_2y"
                style="@style/BezierDialogEditText"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>