<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yooiistudios.newsflow.ui.activity.StoreTempActivity">

    <Button
        android:id="@+id/store_pro_version_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:onClick="onFullVersionButtonClicked"
        android:text="Buy"/>

    <TextView
        android:id="@+id/store_pro_version_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_toStartOf="@id/store_pro_version_button"
        android:text="Full Version"/>

    <Button
        android:id="@+id/store_no_ad_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/store_pro_version_button"
        android:layout_alignParentEnd="true"
        android:onClick="onNoAdButtonClicked"
        android:text="Buy"/>


    <TextView
        android:id="@+id/store_no_ad_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_toStartOf="@id/store_no_ad_button"
        android:layout_below="@id/store_pro_version_text_view"
        android:text="No Ad"/>

    <Button
        android:id="@+id/store_more_news_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/store_no_ad_button"
        android:layout_alignParentEnd="true"
        android:onClick="onMoreNewsButtonClicked"
        android:text="Buy"/>

    <TextView
        android:id="@+id/store_more_news_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_toStartOf="@id/store_more_news_button"
        android:layout_below="@id/store_no_ad_text_view"
        android:text="More Bottom News Slot"/>

    <Button
        android:id="@+id/store_feature1_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/store_more_news_button"
        android:layout_alignParentEnd="true"
        android:onClick="onFeature1ButtonClicked"
        android:text="Buy"/>

    <TextView
        android:id="@+id/store_feature1_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_toStartOf="@id/store_feature1_button"
        android:layout_below="@id/store_more_news_text_view"
        android:text="Feature 1(Temp)"/>

    <!-- Test -->
    <Button
        android:id="@+id/store_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onResetButtonClicked"
        android:text="Reset"/>

    <Button
        android:id="@+id/store_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onDebugButtonClicked"
        android:text="Store"/>

    <!-- Loading -->
    <View
        android:id="@+id/store_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/store_loading_view_color"
        android:visibility="invisible"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/store_progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false" />

</RelativeLayout>
