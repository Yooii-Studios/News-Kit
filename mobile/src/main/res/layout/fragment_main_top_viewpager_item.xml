<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_top_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/content_description"/>

    <ProgressBar
        android:id="@+id/main_top_item_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/Base.Widget.AppCompat.ProgressBar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7f101010"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/main_top_item_title_textview"
        android:layout_alignBottom="@id/main_top_item_image_view"
        style="@style/MainTopTitleText"/>

    <View
        android:id="@+id/main_top_item_ripple_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"/>

</RelativeLayout>