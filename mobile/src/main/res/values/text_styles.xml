<resources>
    <!-- BaseStyle 들은 폰, 태블릿 둘 다 지원 위함 -->
    <!-- Main -->
    <style name="MainNewsFeedTitleTextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/main_bottom_news_feed_title_padding</item>
        <item name="android:paddingRight">@dimen/main_bottom_news_feed_title_padding</item>
        <item name="android:paddingBottom">@dimen/main_bottom_news_feed_title_padding</item>
        <item name="android:textColor">@color/material_white_primary_text</item>

        <!-- For testing layout -->
        <!--<item name="android:background">@color/material_orange_200</item>-->
    </style>

    <!-- Top -->
    <style name="MainTopTitleTextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/main_top_view_pager_title_padding</item>
        <item name="android:textColor">@android:color/white</item>

        <!-- For testing layout -->
        <!--<item name="android:background">@color/material_orange_200</item>-->
    </style>

    <style name="MainTopTitleText" parent="MainTopTitleTextBase">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <!--<item name="android:textSize">26sp</item>-->
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="MainTopItemNewsFeedTitleText" parent="MainNewsFeedTitleTextBase">
        <item name="android:padding">@dimen/main_top_news_feed_title_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">@dimen/text_size_body_1_material</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <!-- Bottom -->
    <style name="MainBottomItemTextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/main_bottom_text_padding</item>
        <item name="android:layout_marginBottom">@dimen/main_bottom_title_margin_bottom</item>
        <item name="android:textColor">@color/material_white_primary_text</item>

        <!-- For testing layout -->
        <!--<item name="android:background">@color/material_green_200</item>-->
    </style>

    <style name="MainBottomItemTitleText" parent="MainBottomItemTextBase">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textSize">@dimen/main_bottom_title_text_size</item>

        <item name="android:ellipsize">end</item>
    </style>

    <style name="MainBottomItemNewsFeedTitleText" parent="MainNewsFeedTitleTextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textSize">@dimen/main_newsfeed_title_text_size</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <!-- Detail -->
    <style name="NewsFeedDetailTitle">
        <item name="android:paddingTop">@dimen/detail_text_padding</item>
        <item name="android:paddingLeft">@dimen/detail_text_padding</item>
        <item name="android:paddingRight">@dimen/detail_text_padding</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/news_feed_detail_title_max_line</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:text">U.S. Weighs Military Action Against ISIS in Syria</item>
    </style>

    <style name="NewsFeedDetailDescription">
        <item name="android:paddingTop">@dimen/detail_text_inner_padding</item>
        <item name="android:paddingLeft">@dimen/detail_text_padding</item>
        <item name="android:paddingRight">@dimen/detail_text_padding</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">@integer/news_feed_detail_description_text_max_line</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">@dimen/text_size_body_1_material</item>
        <item name="android:text">The United States is open to the possibility of military action against Islamist militants in Syria, a top Obama Administration official said Friday, warning that the U.S. will do what is necessary to protect Americans</item>
    </style>

    <!-- Debug -->
    <style name="AutoScrollSettingDialogEditText" >
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">@dimen/dialog_bezier_row_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">@dimen/main_top_view_pager_page_margin</item>
    </style>

    <!-- Debug -->
    <style name="BezierDialogEditText" >
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">@dimen/dialog_bezier_row_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
</resources>
