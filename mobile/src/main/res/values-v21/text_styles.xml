<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Main -->
    <!-- Top -->
    <style name="MainTopTitleTextBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@android:style/Theme.Holo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/main_top_view_pager_title_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainBottomItemTextBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:theme">@android:style/Theme.Holo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/main_bottom_text_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainTopTitleTextStyle" parent="MainTopTitleTextBaseStyle">
        <item name="android:textSize">26sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="MainBottomItemTextStyle" parent="MainBottomItemTextBaseStyle">
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textSize">19sp</item>
    </style>

    <style name="MainNewsFeedTitleTextBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:theme">@android:style/Theme.Holo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/main_bottom_news_feed_title_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainTopItemNewsFeedTitleTextStyle" parent="MainNewsFeedTitleTextBaseStyle">
        <item name="android:padding">@dimen/main_top_news_feed_title_padding</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
        <!--<item name="android:textSize">11sp</item>-->
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="MainBottomItemNewsFeedTitleTextStyle" parent="MainNewsFeedTitleTextBaseStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Caption</item>
        <item name="android:textSize">10sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

</resources>
