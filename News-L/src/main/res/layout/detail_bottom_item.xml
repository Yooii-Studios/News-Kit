<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/detail_bottom_news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@android:style/Theme.Material"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:maxLines="2"
        android:layout_gravity="start"
        android:padding="@dimen/detail_text_padding"
        android:text="U.S. Weighs Military Action Against ISIS in Syria"
        android:textColor="@android:color/black"
        android:ellipsize="end"/>
    
    <TextView
        android:id="@+id/detail_bottom_news_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@android:style/Theme.Material"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:maxLines="2"
        android:layout_gravity="start"
        android:paddingStart="@dimen/detail_text_padding"
        android:paddingTop="@dimen/detail_text_inner_padding"
        android:paddingEnd="@dimen/detail_text_padding"
        android:paddingBottom="@dimen/detail_text_wide_padding"
        android:layout_below="@id/detail_bottom_news_item_title"
        android:text="The United States is open to the possibility of military action against Islamist militants in Syria, a top Obama Administration official said Friday, warning that the U.S. will do what is necessary to protect Americans"
        android:textColor="@android:color/darker_gray"
        android:ellipsize="end"/>

</RelativeLayout>