<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/base_margin"
    android:paddingTop="@dimen/base_margin"
    android:paddingRight="@dimen/base_margin">

    <TextView
        android:id="@+id/setting_item_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_main_auto_refresh_speed"
        android:textColor="@color/material_black_primary_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

    <SeekBar
        android:id="@+id/setting_item_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_half"/>
</LinearLayout>