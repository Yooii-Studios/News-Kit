<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yooiistudios.news.ui.activity.NewsDetailActivity">

    <RelativeLayout
        android:id="@+id/news_detail_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/news_detail_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/progress_bar_margin_top"
        android:minHeight="@dimen/progress_bar_height"
        android:maxHeight="@dimen/progress_bar_height"
        android:focusable="false"
        android:indeterminate="false"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/news_detail_fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/base_margin_half"
        android:layout_marginRight="@dimen/base_margin_half"
        android:layout_marginEnd="@dimen/base_margin_half">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/news_detail_fab_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_facebook_white_24dp"
            fab:fab_colorNormal="@color/material_light_blue_500"
            fab:fab_colorPressed="@color/material_light_blue_100"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/news_detail_fab_copy_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_content_copy_white_24dp"
            fab:fab_colorNormal="@color/material_light_blue_500"
            fab:fab_colorPressed="@color/material_light_blue_100"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/news_detail_fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_share_white_24dp"
            fab:fab_colorNormal="@color/material_light_blue_500"
            fab:fab_colorPressed="@color/material_light_blue_100"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/news_detail_fab_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_explore_white_24dp"
            fab:fab_colorNormal="@color/material_light_blue_500"
            fab:fab_colorPressed="@color/material_light_blue_100"/>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
