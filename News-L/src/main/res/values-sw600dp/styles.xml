<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Main -->
    <!-- Top -->
    <style name="TopTitleTextStyle" parent="TopTitleTextBaseStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Display1</item>
    </style>

    <!-- Detail -->
    <style name="DetailTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@android:style/Theme.Material</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DetailTitleTextAppearance" parent="DetailTextStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Display1</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DetailDescriptionTextAppearance" parent="DetailTextStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:textStyle">normal</item>-->
    </style>

</resources>
