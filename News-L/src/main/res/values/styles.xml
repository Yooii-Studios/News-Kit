<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BaseAppTheme">
        <attr name="actionBarIconColor" format="color" />
    </declare-styleable>

    <style name="BaseAppTheme" parent="android:Theme.Holo.Light">
        <!--<item name="android:colorPrimary">#ffffff</item>-->

        <!-- activity transition 하기 위해 true 로 해야 함. -->
        <!--<item name="android:windowContentTransitions">true</item>-->
        <!--<item name="android:windowAllowEnterTransitionOverlap">true</item>-->
    </style>

    <!-- Main -->
    <style name="MainTheme" parent="BaseAppTheme">
        <!--<item name="android:actionBarTheme">@style/MainActionBarThemeOverlay</item>-->
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- 액션바, 상태바 투명하게 만듦 -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MainActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">none</item><!-- |homeAsUp -->
        <!--<item name="android:titleTextStyle">@style/MainThemeActionBarTitleTextStyle</item>-->
    </style>

    <style name="MainActionBarThemeOverlay" parent="">
        <!--<item name="android:colorControlNormal">?actionBarIconColor</item>-->
        <!--<item name="android:colorControlHighlight">@color/theme_default_accent_light</item>-->
    </style>

    <style name="MainThemeActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MainActivityTheme" parent="MainTheme">
    </style>

    <!-- Detail -->
    <style name="DetailActivityTheme" parent="MainTheme">
        <item name="android:actionBarStyle">@style/DetailActionBar</item>
        <!--<item name="android:colorControlHighlight">@color/theme_detail_selected_background</item>-->

        <!-- 화면이 에러 먹는 이유가 이 라인을 오버라이드 안해서임. -->
        <!--<item name="android:windowContentTransitions">false</item>-->

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DetailActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MainThemeActionBarTitleTextStyle</item>
        <item name="android:background">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_up_white</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>


    <!-- News Detail -->
    <style name="NewsDetailActivityTheme" parent="MainTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!--<item name="android:windowContentTransitions">false</item>-->
        <!--<item name="android:windowAllowEnterTransitionOverlap">false</item>-->
    </style>

    <!-- Store -->
    <style name="StoreTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/store_color_primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/store_color_primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent_material_light</item>
    </style>

</resources>