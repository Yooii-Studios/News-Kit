<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="DetailTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@android:style/Theme.Material</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
    </style>
    
    <style name="DetailTitleTextAppearance" parent="DetailTextStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Headline</item>
    </style>

    <style name="DetailDescriptionTextAppearance" parent="DetailTextStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
    </style>

    <style name="DetailTitleStyle" parent="DetailTitleTextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/detail_text_padding</item>
    </style>

    <style name="DetailDescriptionStyle" parent="DetailDescriptionTextAppearance">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:paddingStart">@dimen/detail_text_wide_padding</item>
        <item name="android:paddingTop">@dimen/detail_text_inner_padding</item>
        <item name="android:paddingEnd">@dimen/detail_text_wide_padding</item>
        <item name="android:paddingBottom">@dimen/detail_text_wide_padding</item>
    </style>

</resources>
