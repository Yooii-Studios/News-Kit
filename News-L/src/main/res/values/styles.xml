<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="BaseAppTheme">
        <attr name="actionBarIconColor" format="color" />
    </declare-styleable>

    <style name="BaseAppTheme" parent="android:Theme.Holo.Light">
        <!--<item name="android:colorPrimary">#ffffff</item>-->

        <!-- activity transition 하기 위해 true 로 해야 함. -->
        <!--<item name="android:windowContentTransitions">true</item>-->
        <!--<item name="android:windowAllowEnterTransitionOverlap">true</item>-->
    </style>

    <!-- Main -->
    <style name="MainTheme" parent="BaseAppTheme">
        <!--<item name="android:actionBarTheme">@style/MainActionBarThemeOverlay</item>-->
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- 액션바, 상태바 투명하게 만듦 -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="MainActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">none</item><!-- |homeAsUp -->
        <!--<item name="android:titleTextStyle">@style/MainThemeActionBarTitleTextStyle</item>-->
    </style>

    <style name="MainActionBarThemeOverlay" parent="">
        <!--<item name="android:colorControlNormal">?actionBarIconColor</item>-->
        <!--<item name="android:colorControlHighlight">@color/theme_default_accent_light</item>-->
    </style>

    <style name="MainThemeActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MainActivityTheme" parent="MainTheme">
    </style>

    <!-- NewsFeed Detail -->
    <style name="NewsFeedDetailTheme" parent="@style/Theme.AppCompat.NoActionBar">
    </style>

    <!-- NewsFeed Select -->
    <style name="NewsSelectTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/news_select_color_primary</item>
        <item name="colorPrimaryDark">@color/news_select_color_primary_dark</item>
        <item name="colorAccent">@color/news_select_color_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>

        <!--<item name="colorControlNormal">@android:color/black</item>-->
        <!-- colorControlNormal, colorControlActivated, colorControlHighlight,
            colorButtonNormal, colorSwitchThumbNormal, colorEdgeEffect, statusBarColor and navigationBarColor -->

        <!-- 탭, 클릭 아이템 배경색들을 정해주기 위한 property -->
        <item name="selectableItemBackground">@drawable/news_select_selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/news_select_selectable_item_background</item>
        <!-- Cusrom Rss 버튼 Ripple 색상 변경하지만 v21에서 사각형으로 변해서 일단 주석처리 -->
        <!--<item name="selectableItemBackgroundBorderless">@drawable/news_select_selectable_item_background</item>-->
        <!--<item name="android:selectableItemBackgroundBorderless" tools:ignore="NewApi">@drawable/news_select_selectable_item_background</item>-->
    </style>

    <!-- SlidingTabLayout 전용 -->
    <style name="NewsSelectTheme.Tab" parent="NewsSelectTheme">
        <!-- 좌우 스크롤 잔상 색을 위한 property -->
        <item name="colorPrimary">@color/news_select_color_primary_dark</item>

        <!-- 탭의 색상들을 정해주기 위한 property -->
        <item name="selectableItemBackground">@drawable/news_select_tab_selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/news_select_tab_selectable_item_background</item>
    </style>

    <!-- News Detail -->
    <style name="NewsDetailActivityTheme" parent="MainTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!--<item name="android:windowContentTransitions">false</item>-->
        <!--<item name="android:windowAllowEnterTransitionOverlap">false</item>-->
    </style>

    <!-- Store -->
    <style name="StoreTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/store_color_primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/store_color_primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent_material_light</item>
    </style>

    <!-- Info -->
    <style name="InfoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/news_select_color_primary</item>
        <item name="colorPrimaryDark">@color/news_select_color_primary_dark</item>
        <item name="colorAccent">@color/news_select_color_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <!-- Toolbar TitleStyle: 나중에 승용에게 배워서 사용하자 -->
    <!--<style name="ActionBarTitleStyle" parent="Base.TextAppearance.AppCompat.Title">-->
        <!--<item name="android:typeface">@string/noto_sans_medium</item>-->
    <!--</style>-->

</resources>