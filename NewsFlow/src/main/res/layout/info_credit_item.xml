<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_info_credit_item_outer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_inner"
    android:paddingBottom="@dimen/margin_inner"
    android:paddingLeft="@dimen/margin_outer"
    android:paddingRight="@dimen/margin_outer"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/setting_info_credit_item_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:padding="@dimen/info_credit_padding"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_info_credit_item_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:text="Executive Producer"
            android:textColor="@color/material_black_secondary_text"/>

        <TextView
            android:id="@+id/setting_info_credit_item_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/setting_info_credit_item_title_textview"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/info_credit_name_left_margin"
            android:layout_marginTop="@dimen/base_margin_small"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Robert Song"
            android:textColor="@color/material_deep_teal_500"/>

    </RelativeLayout>
</RelativeLayout>