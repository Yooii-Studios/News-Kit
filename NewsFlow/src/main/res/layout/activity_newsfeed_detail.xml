<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.yooiistudios.newsflow.ui.activity.NewsFeedDetailActivity"
    android:id="@+id/detail_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/newsfeed_detail_reveal_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|bottom"/>
    </io.codetail.widget.RevealFrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/newsfeed_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:popupTheme="@style/Theme.AppCompat.Light"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/newsfeed_detail_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yooiistudios.newsflow.ui.widget.ObservableScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="com.yooiistudios.newsflow.ui.activity.NewsFeedDetailActivity"
            android:id="@+id/detail_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/detail_scroll_content_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/detail_top_news_image_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_top_image_view_height">

                    <ImageView
                        android:id="@+id/detail_top_news_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/content_description"/>

                    <View
                        android:id="@+id/detail_top_news_image_ripple_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="?android:selectableItemBackground">
                    </View>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/detail_top_news_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_top_news_image_wrapper">

                    <LinearLayout
                        android:id="@+id/detail_top_news_text_ripple_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="?android:selectableItemBackground"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detail_top_news_title_text_view"
                            style="@style/DetailTitleStyle"/>

                        <TextView
                            android:id="@+id/detail_top_news_description_text_view"
                            style="@style/DetailDescriptionStyle"/>
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/detail_bottom_news_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_top_news_text_layout"/>

                <FrameLayout
                    android:id="@+id/detail_loading_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#aaaa"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </RelativeLayout>
        </com.yooiistudios.newsflow.ui.widget.ObservableScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newsfeed_detail_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2310680050309555/8477940628" />

    <View
        android:id="@+id/newsfeed_detail_ad_upper_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/admob_upper_divider_height"
        android:layout_above="@id/newsfeed_detail_adView"
        android:visibility="invisible"
        android:background="@color/ad_upper_divider_color" />

    <FrameLayout
        android:id="@+id/detail_transition_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Top 부분 Shadow 용 뷰 -->
    <View
        android:id="@+id/detail_top_gradient_shadow_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/detail_actionbar_gradient"
        android:layout_gravity="top" />

    <!-- 스크롤에 따라 액션바의 색을 변환 -->
    <View
        android:id="@+id/detail_toolbar_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/black"
        android:alpha="0"
        android:layout_gravity="top" />

</RelativeLayout>