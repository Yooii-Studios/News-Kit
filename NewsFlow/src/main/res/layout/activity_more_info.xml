<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.yooiistudios.newsflow.ui.activity.MoreInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/more_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/toolbar_background"
        app:title="@string/info_news_info"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <ListView
        android:id="@+id/more_info_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/info_adView"
        android:layout_below="@id/more_info_toolbar"
        tools:listitem="@layout/info_item"/>

</RelativeLayout>
