<resources>
    <!-- Main -->
    <!-- Top -->
    <style name="MainTopTitleTextBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@android:style/Theme.Holo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/main_top_view_pager_title_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainBottomItemTextBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:theme">@android:style/Theme.Holo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/main_bottom_text_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainTopTitleTextStyle" parent="MainTopTitleTextBaseStyle">
        <item name="android:textSize">26sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="MainBottomItemTextStyle" parent="MainBottomItemTextBaseStyle">
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textSize">19sp</item>
    </style>

    <style name="MainNewsFeedTitleTextBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:theme">@android:style/Theme.Holo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/main_bottom_news_feed_title_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainTopItemNewsFeedTitleTextStyle" parent="MainNewsFeedTitleTextBaseStyle">
        <item name="android:padding">@dimen/main_top_news_feed_title_padding</item>
        <!--<item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>-->
        <!--<item name="android:textSize">11sp</item>-->
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="MainBottomItemNewsFeedTitleTextStyle" parent="MainNewsFeedTitleTextBaseStyle">
        <!--<item name="android:textAppearance">@android:style/TextAppearance.Material.Caption</item>-->
        <item name="android:textSize">10sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <!-- Detail -->
    <style name="DetailTextBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@android:style/Theme.Holo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DetailTextStyle" parent="DetailTextBaseStyle">
        <item name="android:maxLines">2</item>
    </style>

    <style name="DetailTitleTextBaseStyle" parent="DetailTextStyle">
        <!--<item name="android:textAppearance">@android:style/TextAppearance.Material.Headline</item>-->
    </style>

    <style name="DetailDescriptionTextBaseStyle" parent="DetailTextStyle">
        <!--<item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>-->
    </style>

    <style name="DetailTitleStyle" parent="DetailTitleTextBaseStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/detail_text_padding</item>
        <item name="android:layout_marginTop">@dimen/detail_text_padding</item>
        <item name="android:layout_marginRight">@dimen/detail_text_padding</item>
        <!--<item name="android:padding">@dimen/detail_text_padding</item>-->
    </style>

    <style name="DetailDescriptionStyle" parent="DetailDescriptionTextBaseStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:layout_marginLeft">@dimen/detail_text_wide_padding</item>
        <item name="android:layout_marginTop">@dimen/detail_text_inner_padding</item>
        <item name="android:layout_marginRight">@dimen/detail_text_wide_padding</item>
        <!--<item name="android:layout_marginBottom">@dimen/detail_text_wide_padding</item>-->

        <!--<item name="android:paddingLeft">@dimen/detail_text_wide_padding</item>-->
        <!--<item name="android:paddingTop">@dimen/detail_text_inner_padding</item>-->
        <!--<item name="android:paddingRight">@dimen/detail_text_wide_padding</item>-->
        <!--<item name="android:paddingBottom">@dimen/detail_text_wide_padding</item>-->
    </style>

    <style name="NewsFeedReplaceTextStyle" parent="DetailDescriptionTextBaseStyle">
        <item name="android:paddingLeft">@dimen/detail_text_inner_padding</item>
        <item name="android:paddingTop">@dimen/detail_text_inner_padding</item>
        <item name="android:paddingRight">@dimen/detail_text_inner_padding</item>
        <item name="android:paddingBottom">@dimen/detail_text_inner_padding</item>
    </style>

    <!-- Debug -->
    <style name="AutoScrollSettingDialogEditTextStyle" >
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">@dimen/dialog_bezier_row_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">@dimen/main_top_view_pager_page_margin</item>
    </style>

    <!-- Debug -->
    <style name="BezierDialogEditTextStyle" >
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">@dimen/dialog_bezier_row_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

</resources>
